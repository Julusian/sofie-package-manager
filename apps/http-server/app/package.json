{
    "name": "@http-server/app",
    "version": "1.0.0",
    "description": "Upload to and serve proxies of packages",
    "private": true,
    "scripts": {
        "build": "rimraf dist && yarn build:main",
        "build:main": "tsc -p tsconfig.json",
        "build-win32": "mkdir deploy & rimraf deploy/http-server.exe  && nexe dist/index.js -t windows-x64-12.18.1 -o deploy/http-server.exe && node scripts/copy-natives.js win32-x64",
        "__test": "jest",
        "start": "node dist/index.js",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "nexe": "^3.3.7",
        "lint-staged": "^7.2.0"
    },
    "dependencies": {
        "@http-server/generic": "*"
    },
    "peerDependencies": {
        "@sofie-automation/blueprints-integration": "*"
    },
    "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
    "engines": {
        "node": ">=12.20.0"
    },
    "lint-staged": {
        "*.{js,css,json,md,scss}": [
            "prettier"
        ],
        "*.{ts,tsx}": [
            "eslint"
        ]
    }
}